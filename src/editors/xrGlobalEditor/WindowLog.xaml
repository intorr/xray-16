<Window x:Class="xrGlobalEditor.WindowLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xrGlobalEditor"
        mc:Ignorable="d"
        Title="Log" Width="250" Height="150" MinWidth="250" MinHeight="150" WindowStyle="ToolWindow" Closing="Window_Closing">
    <Grid>
        <ListBox Margin="0,0,0,20" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
        <Grid VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Close" Grid.Column="0"/>
            <Button Content="Flush" Grid.Column="1"/>
            <Button Content="Clear" Grid.Column="2"/>
            <Button Content="Clear selected" Grid.Column="3"/>
        </Grid>
    </Grid>
</Window>
